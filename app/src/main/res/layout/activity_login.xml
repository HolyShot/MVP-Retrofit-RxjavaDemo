<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login_bg"
        android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y180"
        android:layout_marginLeft="408px"
        android:layout_marginRight="408px"
        android:layout_marginTop="176px"
        android:src="@drawable/login_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="北 京 XXXX有限公司"
        android:textColor="#fff"
        android:textSize="34px" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="BEIJING TECHTHEME TECHNOLOGY CO.,LTD"
        android:textColor="#fff"
        android:textSize="22px" />

    <Spinner
        android:id="@+id/login_spinner"
        android:layout_marginTop="@dimen/y130"
        android:layout_marginRight="@dimen/x100"
        android:layout_marginLeft="@dimen/x100"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/Data"
        android:background="@drawable/login_shape"
        ></Spinner>

    <EditText
        android:id="@+id/login_username"
        android:layout_marginTop="@dimen/y50"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="liubin34804"
        android:textColorHint="#e1e1e1"
        android:layout_marginRight="@dimen/x100"
        android:layout_marginLeft="@dimen/x100"
        android:background="@drawable/login_shape"
        />
    <EditText
        android:id="@+id/login_password"
        android:layout_marginTop="@dimen/y50"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="123"
        android:password="true"
        android:textColorHint="#e1e1e1"
        android:layout_marginRight="@dimen/x100"
        android:layout_marginLeft="@dimen/x100"
        android:background="@drawable/login_shape"
        />
    <LinearLayout
        android:layout_marginTop="@dimen/y40"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/x100"
        android:layout_marginLeft="@dimen/x100"
        android:orientation="horizontal">
        <Button
            android:id="@+id/login_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="取消"
            android:textColor="#fff"
            android:textSize="56px"
            android:background="#1aa5f6"
            />

        <Button
            android:id="@+id/login_confirm"
            android:layout_marginLeft="@dimen/x54"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="确定"
            android:textColor="#fff"
            android:textSize="56px"
            android:background="#1aa5f6"
            />
    </LinearLayout>
    </LinearLayout>
   <LinearLayout
       android:id="@+id/login_progress"
        android:layout_centerInParent="true"
       android:layout_marginLeft="@dimen/x80"
       android:layout_marginRight="@dimen/x80"
       android:padding="@dimen/x30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fffff9"
        android:orientation="horizontal"
        android:visibility="invisible"
        >
        <ProgressBar
            android:layout_marginLeft="@dimen/x100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="@dimen/x100"
            android:layout_gravity="center_vertical"
            android:text="登录中。。。"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


</RelativeLayout>
